# Environment Variables for Render.com Deployment
# Copy these to your Render Web Service Environment settings

# ============================================
# REQUIRED - Django Core
# ============================================

# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# IMPORTANT: Set to False in production!
DEBUG=False

# ============================================
# REQUIRED - Database
# ============================================

# Copy "Internal Database URL" from your Render PostgreSQL database
# Example: postgresql://user:password@hostname:5432/database
DATABASE_URL=postgresql://user:password@hostname:5432/eschool

# ============================================
# REQUIRED - Render Configuration
# ============================================

# Your Render app URL (without https://)
# Example: eschool-app.onrender.com
RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Python version
PYTHON_VERSION=3.12.9

# ============================================
# OPTIONAL - Localization
# ============================================

LANGUAGE_CODE=fr
TIME_ZONE=Africa/Lubumbashi

# ============================================
# OPTIONAL - Email Configuration
# ============================================

# For Gmail, use an "App Password" not your regular password
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@eschool.cd

# ============================================
# OPTIONAL - Site Configuration
# ============================================

SITE_NAME=eSchool
SITE_URL=https://your-app.onrender.com

# ============================================
# OPTIONAL - Redis Cache (if you add Redis)
# ============================================

# REDIS_URL=redis://hostname:6379

# ============================================
# OPTIONAL - Allowed Hosts (comma-separated)
# ============================================

# Additional hosts beyond RENDER_EXTERNAL_HOSTNAME
# ALLOWED_HOSTS=example.com,www.example.com
